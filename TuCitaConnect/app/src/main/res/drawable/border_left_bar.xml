<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#a6bec2" />
        </shape>
    </item>

    <item android:top="-2sp" android:left="16sp" android:right="-19sp">
        <shape android:shape="line" >
            <stroke android:color="#ca080808"
            android:width="50sp"/>
        </shape>
    </item>
    <item android:top="0sp" android:right="3sp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#2b2b33" />
        </shape>
    </item>
</layer-list>

