<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:background="@drawable/ab_transparent_light_holo"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/touched"
    >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageLocation"
            android:src="@mipmap/ic_phone"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textName"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageLocation"
            android:layout_toEndOf="@+id/imageLocation"
        android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
        android:layout_height="50dp"
       android:background="@android:color/transparent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/progress"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touched">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageCalendar"
            android:src="@mipmap/ic_calendar"
            android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textDate"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/imageCalendar"
                android:layout_toEndOf="@+id/imageCalendar"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"/>
    </RelativeLayout>
</RelativeLayout>