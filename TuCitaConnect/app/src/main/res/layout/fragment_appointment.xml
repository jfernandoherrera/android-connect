<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.techventures.tucitaconnect.utils.common.views.AppointmentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/appointment"/>
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewServices"
            android:indicatorLeft="294dp"
            android:indicatorRight="329dp"
            android:foregroundGravity="bottom"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:padding="16dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <com.techventures.tucitaconnect.utils.common.views.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textColor="@color/blackSecondary"
                    android:id="@+id/total"
                    android:text="@string/order_total"/>
                <com.techventures.tucitaconnect.utils.common.views.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentText"
                    app:bold="true"
                    android:id="@+id/textPrice"
                    />
            </LinearLayout>
            <com.techventures.tucitaconnect.utils.common.views.AppButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/cling_button_normal"
                android:layout_marginStart="16dp"
                android:id="@+id/changeDate"
                android:text="@string/change_date"/>
        </RelativeLayout>
    </LinearLayout></ScrollView>