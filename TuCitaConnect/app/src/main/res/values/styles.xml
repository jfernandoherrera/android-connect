<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Base" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_all_set</item>
    </style>
    <style name="AppTheme.BaseAccount" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/OverFlowAccount</item>
    </style>
    <style name="OverFlowAccount" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_name</item>
    </style>
      <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
    </style>
    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blackPrimary</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>
</resources>
