<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"/>
<com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
    android:layout_width="wrap_content"
    android:id="@+id/mondayBusiness"
    android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/tuesdayBusiness"
        android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/wednesdayBusiness"
        android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/thursdayBusiness"
        android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/fridayBusiness"
        android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/saturdayBusiness"
        android:layout_height="wrap_content"/>
    <com.example.techventures.tucitaconnect.utils.common.views.DayOpeningHoursView
        android:layout_width="wrap_content"
        android:id="@+id/sundayBusiness"
        android:layout_height="wrap_content"/>
</LinearLayout></ScrollView>